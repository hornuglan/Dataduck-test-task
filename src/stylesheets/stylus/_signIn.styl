@import '/_colours.styl'

.signIn
    &__button
      display: flex
      justify-content: center
      align-items: center
      width: 100%
      height: 40px
      padding-right: 12px
      border: 1px solid #D8E1E6
      border-radius: 4px
      font-weight: bold
      text-align: center
      line-height: 40px
      text-decoration: none
      background-color: bgcolor
      color: secondary-text
      cursor: pointer
      &:before
        content: ''
        display: inline-block
        margin-top: 0
        margin-bottom: 0
        margin-left: 0
        margin-right: 5px
        width: 24px
        height: 40px
        background-image: url("./images/user.svg")
        background-repeat: no-repeat
        background-position: center