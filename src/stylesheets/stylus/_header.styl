@import '/_colours.styl'

.header
  &__wrapper
    display: flex
    width: 100%
    justify-content: space-between
    align-items: center
  .line-wrapper
    width: 140px  
    padding-left: 42px
  .line
    width: 100%
    &__inner
      display: block
      width: 100%
      height: 16px
      background-color: secondary-text

@media screen and (max-width: 768px)
  .header
    .line-wrapper
      padding-left: 0
  