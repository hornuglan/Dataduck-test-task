@import '/_colours.styl'

.container
  width: 100%
  height: 100%
.wrapper
  margin: 0 auto
  padding-top: 20px
  padding-bottom: 50px
  padding-left: 20px
  padding-right: 20px
.text
  display: flex
  justify-content: space-between
  &__list
    padding: 0
    margin: 0
    list-style: none
  &__item
    display: flex
    margin: 25px 0
    line-height: 24px
    color: primary-text
    &:before
      display: block
      width: 18px
      height: 14px
      content: ''
      background-image: url('./images/check.png')
      background-repeat: no-repeat
      margin-top: 5px
      padding-right: 20px
.form-wrapper
  width: 440px
  padding-left: 42px  
.image
  position: relative
  margin: 32px 0
  width: 50%
  &__img
    position: absolute
    right: -27px
    width: 100%
    height: 100vh
    background-repeat: no-repeat
    background-image: url('./images/splitted-img.png')

@media screen and (max-width: 1120px)
    .wrapper
      max-width: 1120px
    .text
      justify-content: center  

@media screen and (max-width: 768px)
    .form-wrapper
      width: 100%
      padding-left: 0
    .text
      &__title
        text-align: center
    .image
      display: none   
        
